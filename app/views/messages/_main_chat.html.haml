.main-chat  
  .header
    .header__group--name 
      = @group.name
      .header__member--list 
        Member :
        - @users.each do |member|
          = member.name
    = link_to edit_group_path(@group.id)  do
      .header__edit--btn Edit
  .tweet
    =render @messages
    
  .form
    .form_box
      =form_for([@group, @message],id: "new_message") do |f|
        .test
          = f.text_field :content, class: 'text__message', placeholder: 'type a message'
          .input-box
            = f.label :image, class: 'input_message-box' do
              = icon('far', 'image', class: 'icon')
              = f.file_field :image, class: 'input_box-file'
          = f.submit 'Send', class: 'send_btn'
